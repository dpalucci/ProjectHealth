            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Width="5*" IsReadOnly="True"  Binding="{Binding Path=Title}" />
                <DataGridTextColumn Header="Calorie" Width="2*" IsReadOnly="True"  Binding="{Binding Path=Caloris}" />
                <DataGridTextColumn Header="Fat" Width="1*" IsReadOnly="True"  Binding="{Binding Path=Fat}" />
                <DataGridTextColumn Header="Protein" Width="2*" IsReadOnly="True"  Binding="{Binding Path=Protein}" />
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="151,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.623,-0.336" Width="45" Grid.Column="2"/>
        <Label Content="Title:" HorizontalAlignment="Left" Margin="151,38,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <Label Content="Calorie:" HorizontalAlignment="Left" Margin="151,69,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2"/>
