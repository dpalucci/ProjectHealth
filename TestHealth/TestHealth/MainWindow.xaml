        <TextBox x:Name="tbTitle" HorizontalAlignment="Left" Height="23" Margin="248,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Grid.Column="2"/>
        <TextBox x:Name="tbCalories" HorizontalAlignment="Left" Height="23" Margin="248,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" RenderTransformOrigin="0.585,2.119" Grid.Column="2"/>
        <Button x:Name="btAdd" Content="Add" HorizontalAlignment="Left" Margin="299,188,0,0" VerticalAlignment="Top" Width="75" Click="btAdd_Click" Grid.Column="2"/>
        <Button x:Name="btUpdate" Click="btUpdate_Click" Content="Update" HorizontalAlignment="Left" Margin="170,215,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2"/>
        <Button x:Name="btDelete" Click="btDelete_Click" Content="Delete" HorizontalAlignment="Left" Margin="299,215,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2"/>
        <Label Content="Fat:" HorizontalAlignment="Left" Margin="151,102,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <Label Content="Protein:" HorizontalAlignment="Left" Margin="151,133,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2"/>
        <TextBox x:Name="tbFat" HorizontalAlignment="Left" Height="23" Margin="248,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Grid.Column="2"/>
        <TextBox x:Name="tbProtein" HorizontalAlignment="Left" Height="23" Margin="248,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" RenderTransformOrigin="0.585,2.119" Grid.Column="2"/>
        <Label HorizontalAlignment="Left" Margin="70,301,0,0" VerticalAlignment="Top">
            <Label Content="Label"/>
        </Label>
        <Label Content="Toltal   Calories:" HorizontalAlignment="Left" Height="33" Margin="10,283,0,-45" VerticalAlignment="Top" RenderTransformOrigin="-0.263,0.458" Width="103"/>
        <TextBlock HorizontalAlignment="Left" Margin="118,288,0,-45" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="28" Width="89" Grid.ColumnSpan="3"/>
        <Label HorizontalAlignment="Left" Margin="70,334,0,-63" VerticalAlignment="Top">
